package pruebadepurar; //no tenia puesto el paquete
import java.util.Scanner;
public class primo{ //tampoco tenia abierta las llaves de la clase
	
public static void main(String[] args){

	int num;
	boolean resultado = true;
	Scanner S = new Scanner(System.in);

	System.out.print("Introduce un número para comprobar si es primo: ");
	num = S.nextInt();

	for(int i=2; i<num; i++){ //en el for quitariamos el = ya que si no siempre nos daría que es primo al llegar a dividirse por si mismo
		if(num % i == 0){
			resultado = false;
		}
	}

	if (resultado){
		System.out.println("El número es primo.");
	}
	else{
		System.out.println("El número NO es primo");
	}
}}
